<Blanket
  @isTinted={{true}}
  @onClick={{this.handleBlanketClick}}
  @renderInPlace={{this.renderInPlace}}
  data-test-modal-blanket
>
  <div class="modal {{this.classNames}}" ...attributes>
    {{yield (hash
      Header=(component "modal-header" onClose=this.close)
      Body=(component "modal-body")
      Footer=(component "modal-footer")
      actions=(hash close=this.close)
    )}}
  </div>
</Blanket>